#avoid flicker
double_buffer yes
#no_buffers yes

#behaviour
update_interval 1

#own window to run simultanious 2 or more conkys
own_window yes
own_window_type override
own_window_transparent no
#to prevent window from moving
use_spacer left
#when using only the horizontal bar
minimum_size 900 0      
#minimum_size 1024 0
#borders
draw_borders no
border_margin 1

#shades
draw_shades yes
draw_graph_borders yes

#position
#gap_x 1
#gap_y 788
#gap_x 0
#use with window width 900
gap_x 42        
gap_y 5
#alignment bottom_left
alignment top_left

#colour
#default_color D6D6D6
default_color  9f907d
#default_shade_color 000000
own_window_colour 202020
#own_window_colour 3d352a
#draw_borders_colour 000000
#draw_graph_borders_colour 000000

#font
use_xft yes
font -*-terminus-*-r-*-*-14-*-*-*-*-*-*-*
#xftfont Comic Sans MS:pixelsize=11
xftfont HandelGotD:pixelsize=10
#xftfont monofur:pixelsize=10


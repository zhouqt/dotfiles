#!/usr/bin/env ruby
# coding: utf-8
#Author: Roy L Zuo (roylzuo at gmail dot com)
#Last Change: Mon 14 Sep 2009 11:19:34 PM EST
#Description: get exchange rate from yahoo
require 'net/http'
require 'uri'

if __FILE__ == $0
    if ARGV.length == 3
        f = ARGV[0].upcase
        t = ARGV[1].upcase
        m = ARGV[2]
    elsif ARGV.length == 2
        f = ARGV[0].upcase
        t = ARGV[1].upcase
        m = 1
    else
        puts "Usage:    #{$0} <from> <to> <amount>"
        exit
    end
    #page = Net::HTTP.get( URI.parse "http://tw.money.yahoo.com/currency_exc_result?amt=#{m}&from=#{f}&to=#{t}" )
    page = Net::HTTP.get( URI.parse "http://qq.ip138.com/hl.asp?from=#{f}&to=#{t}&q=#{m}" )
    #result = page.match(/=\s<em>(\d+(?:\.\d+)?)<\/em>/)[1]
    result = page.match(/<\/td><td>(\d+(?:\.\d+)?)<\/td><\/tr>/)[1]
    puts result
end

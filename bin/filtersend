#!/bin/bash
#Author: Roy L Zuo (roylzuo at gmail dot come)
#Last Change: Fri 13 Nov 2009 09:30:29 AM EST
#Description: 

hn=$(host $(curl -s icanhazip.com)|awk '{print $NF}')
if [[ "$hn" = *.uq.* ]]; then 
    tee >(lbdb-fetchaddr -a) |/usr/bin/msmtp -a uq $@
else
    tee >(lbdb-fetchaddr -a) |/usr/bin/msmtp $@
fi

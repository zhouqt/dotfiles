[user]
    name  = roylez
    email = roylzuo@gmail.com
[color]  # Ensure we get color
    diff   = auto
    branch = auto
    status = auto
    grep   = auto
[push]
    default = matching
[alias]
    a   = add
    b   = branch
    c   = commit
    co  = checkout
    d   = diff
    des = describe --tags
    l   = log
    lc  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lg  = log --graph
    m   = merge
    pl  = pull
    pu  = push
    s   = status
    t   = tag
    untrack = rm -r --cached
[merge]
	tool = gvimdiff
[github]
	user = roylez
[core]
	pager = cat
